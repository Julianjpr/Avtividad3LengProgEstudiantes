@model IEnumerable<Registro_Estudiantes.Models.EstudiantesViewModels>

@{
    ViewData["Title"] = "Lista de Estudiantes";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Index" class="btn btn-primary">Registrar Nuevo Estudiante</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Matricula) @* CAMBIO: De matricula a Matricula *@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.carrera)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Turno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoIngreso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstaBecado) @* CAMBIO: De Estadobecado a EstaBecado *@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PorcentajeBeca)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var estudiante in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => estudiante.Matricula) @* CAMBIO: De matricula a Matricula *@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => estudiante.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => estudiante.carrera)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => estudiante.Correo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => estudiante.Telefono)
                </td>
                <td>
                    @estudiante.Edad.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => estudiante.Genero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => estudiante.Turno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => estudiante.TipoIngreso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => estudiante.EstaBecado) @* CAMBIO: De Estadobecado a EstaBecado *@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => estudiante.PorcentajeBeca)
                </td>
                <td>
                    <a asp-action="Editar" asp-route-matricula="@estudiante.Matricula" class="btn btn-sm btn-info">Editar</a> | @* CAMBIO: De matricula a Matricula *@
                    <a asp-action="Eliminar" asp-route-matricula="@estudiante.Matricula" class="btn btn-sm btn-danger" onclick="return confirm('¿Estás seguro de que quieres eliminar a este estudiante?');">Eliminar</a> @* CAMBIO: De matricula a Matricula *@
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
@* No se requieren scripts de validación aquí, lo cual es correcto. *@
}